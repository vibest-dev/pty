{
  "name": "vibest-pty-daemon-ui",
  "version": "0.2.0",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "crates/*",
    "packages/*",
    "playground",
    "e2e"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@vibest/pty-daemon-playground",
    "build": "turbo run build --filter=vibest-pty-daemon --filter=@vibest/pty-daemon --filter=@vibest/pty-daemon-playground",
    "build:daemon": "turbo run build --filter=vibest-pty-daemon",
    "build:client": "turbo run build --filter=@vibest/pty-daemon-playground",
    "build:sdk": "turbo run build --filter=@vibest/pty-daemon",
    "dist": "bun scripts/build.ts",
    "test": "turbo run test --filter=vibest-pty-daemon --filter=@vibest/pty-daemon",
    "test:e2e": "turbo run test:e2e --filter=@vibest/pty-daemon-e2e",
    "test:sdk": "turbo run test:sdk --filter=@vibest/pty-daemon",
    "lint": "bunx publint packages/pty-daemon --pack bun",
    "check:release": "bun run dist -- --mock-binaries && bunx publint dist/@vibest/pty-daemon --pack bun",
    "publish:packages": "bun scripts/publish.ts",
    "publish:packages:dry": "bun scripts/publish.ts --dry-run --mock-binaries",
    "daemon": "./target/release/vibest-pty-daemon"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "turbo": "^2.8.3",
    "tsdown": "^0.20.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  }
}
